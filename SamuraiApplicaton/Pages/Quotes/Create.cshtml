@page
@model SamuraiApplicaton.Pages.Quotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create:</h1>

<h4>Quotes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="@Model.Quote.Id" type="hidden"/>
            <div class="form-group">
                <label asp-for="Quote.Text" class="control-label"></label>
                <input asp-for="Quote.Text" class="form-control" />
                <span asp-validation-for="Quote.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quote.SamuraiId" class="control-label"></label>
                <select asp-for="Quote.SamuraiId" class="form-control" asp-items="@Model.Samurais">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
