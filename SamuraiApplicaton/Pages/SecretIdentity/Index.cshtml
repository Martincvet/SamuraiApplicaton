@page
@model SamuraiApplicaton.Pages.SecretIdentity.IndexModel

@{
    ViewData["Title"] = "SecretIdentities";
}

<h1>List of SecretIdentities:</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                RealName: 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SecretIdentities) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RealName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> 
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> 
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
